                        <span>@Html.DisplayFor(model => model.t_Goods.goodsPrice)</span>
                    </div>
                  </div>
                  <ul class="div-detail">
                    <li class="div-place">
                        <div class="name"><span>交易地点</span></div>
                        <div class="value"><span>@Html.DisplayFor(model => model.t_Goods.tradeAddress)</span></div>
                    </li>
                    <li class="div-seller">
